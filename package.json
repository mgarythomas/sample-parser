{
  "name": "micro-frontend-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Micro frontend monorepo with Turborepo, pnpm, Next.js, and Tailwind CSS",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:dashboard": "turbo dev --filter=@repo/dashboard",
    "dev:announcements": "turbo dev --filter=@repo/announcements",
    "dev:auth": "turbo dev --filter=@repo/auth",
    "dev:storybook": "turbo dev --filter=@repo/storybook",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "storybook": "pnpm --filter storybook dev"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.3.3",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
